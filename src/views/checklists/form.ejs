<form method="post" action="<%= url %>">
    <div class="field">
        <label class="label">Nome</label>
        <div class="control">
            <input class="input" type="text" name="checklist[name]" placeholder="List of tasks" value="<%= checklist.name %>">
            <% if(checklist.error && checklist.error.hasOwnProoerty('name')) { %>
                <p class="is-danger help"><%= checklist.error.name.message %></p>
            <% } %>
        </div>
    </div>

    <button type="submit" class="button is-success">Salvar</button>
    <a href="/checklists" class="button">Cancelar</a>
</form>